<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="payment"
            type="com.example.tugas5.model.Payment" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/_8sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <TextView
                android:text="@{payment.nameBank}"
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14ssp"
                tools:text="BCA"
                />

            <TextView
                android:text="@{@string/name(payment.name)}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13ssp"
                tools:text="An : Eka Bayu Pratama"
                />

            <TextView
                android:text="@{@string/nomor(payment.nomor)}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13ssp"
                tools:text="Nomor Rekening : 222 01928 0218"
                />

            <TextView
                android:text="@{@string/cabang(payment.distrik)}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13ssp"
                tools:text="Cabang : Bayumanik"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>