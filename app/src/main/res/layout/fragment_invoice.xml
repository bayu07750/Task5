<!--                    >-->

<!--                    <TextView-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_weight="2"-->
<!--                        android:textSize="@dimen/_11ssp"-->
<!--                        android:textColor="@color/colorTextNormal"-->
<!--                        android:text="@string/invoice_number_12909_19081_9831"-->
<!--                        />-->

<!--                    <TextView-->
<!--                        android:id="@+id/textDate"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_weight="1"-->
<!--                        android:textSize="@dimen/_11ssp"-->
<!--                        android:textColor="@color/colorTextNormal"-->
<!--                        tools:text=" 3 sep 2016"-->
<!--                        />-->

<!--                </LinearLayout>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:paddingTop="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/textInvoiceNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextNormal"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13ssp"
                        android:text="@string/invoice_number_12909_19081_9831"
                        />

                    <TextView
                        android:id="@+id/textDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/colorTextNormal"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13ssp"
                        tools:text=" 3 sep 2016"
                        />

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_16sdp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/_4sdp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewInvoice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:id="@+id/textTotalPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_16sdp"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/colorTextNormal"
                            android:textStyle="bold"
                            android:gravity="end"
                            tools:text="Total Rp 1.000.000"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    app:cardCornerRadius="@dimen/_4sdp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/textAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextAddres"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        tools:text="Jalan Duta Permai No. 22 Perumahan Duta Bukit Mas, Banyumanik, Semarang 50254"
                        />

                </androidx.cardview.widget.CardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonDone"
                    style="@style/AppTheme.ButtonFilled"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_46sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:text="@string/done"
                    />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>