<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".ui.account.AccountFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp"
                    android:gravity="center"
                    android:text="@string/account" />

                <ImageButton
                    android:id="@+id/buttonBack"
                    android:layout_width="@dimen/_56sdp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/transparent"
                    android:contentDescription="@string/content_desc_back"
                    android:src="@drawable/ic_back_white" />

            </FrameLayout>

        </com.google.android.material.appbar.AppBarLayout>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:backgroundTint="@android:color/white"
           android:layout_marginTop="@dimen/_16sdp"
           android:layout_marginEnd="@dimen/_16sdp"
           android:layout_marginStart="@dimen/_16sdp"
           app:cardElevation="0dp"
           app:cardCornerRadius="4dp"
           app:layout_constraintTop_toBottomOf="@id/appBar"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingTop="@dimen/_8sdp"
               android:paddingBottom="@dimen/_8sdp"
               android:orientation="vertical">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/_12sdp">

                   <ImageView
                       android:id="@+id/imageProfile"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginEnd="@dimen/_16sdp"
                       android:layout_centerVertical="true"
                       android:contentDescription="@string/content_desc_profile"
                       app:srcCompat="@drawable/ic_profile"
                       />

                   <TextView
                       android:id="@+id/textProfile"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_toEndOf="@id/imageProfile"
                       android:layout_centerVertical="true"
                       android:textColor="#616261"
                       android:textSize="@dimen/_13ssp"
                       android:text="Neil Nelson"
                       />

               </RelativeLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/colorBackground"
                   android:layout_marginStart="@dimen/_12sdp"
                   android:layout_marginEnd="@dimen/_12sdp"
                   />

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/_12sdp">

                   <ImageView
                       android:id="@+id/imageEmail"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginEnd="@dimen/_16sdp"
                       android:layout_centerVertical="true"
                       android:contentDescription="@string/content_desc_email"
                       app:srcCompat="@drawable/ic_email"
                       />

                   <TextView
                       android:id="@+id/textEmail"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_toEndOf="@id/imageEmail"
                       android:layout_centerVertical="true"
                       android:textColor="#616261"
                       android:textSize="@dimen/_13ssp"
                       android:text="neilnelson@gmail.com"
                       />

               </RelativeLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/colorBackground"
                   android:layout_marginStart="@dimen/_12sdp"
                   android:layout_marginEnd="@dimen/_12sdp"
                   />

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/_12sdp">

                   <ImageView
                       android:id="@+id/imagePassword"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginEnd="@dimen/_16sdp"
                       android:layout_centerVertical="true"
                       android:contentDescription="@string/content_desc_password"
                       app:srcCompat="@drawable/ic_password"
                       />

                   <TextView
                       android:id="@+id/textPassword"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_toEndOf="@id/imagePassword"
                       android:layout_centerVertical="true"
                       android:textColor="#616261"
                       android:textSize="@dimen/_13ssp"
                       android:inputType="textPassword"
                       android:text="asda hiahsa"
                       />

               </RelativeLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/colorBackground"
                   android:layout_marginStart="@dimen/_12sdp"
                   android:layout_marginEnd="@dimen/_12sdp"
                   />

           </LinearLayout>

       </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>