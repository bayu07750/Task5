<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme.DisablePreview" parent="AppTheme">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@color/colorBackground</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_4sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_4sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_4sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_4sdp</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:layout_marginStart">@dimen/_32sdp</item>
        <item name="android:layout_marginEnd">@dimen/_32sdp</item>
    </style>

    <style name="AppTheme.ButtonFilled" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_marginStart">@dimen/_32sdp</item>
        <item name="android:layout_marginEnd">@dimen/_32sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.ButtonOutline" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_marginStart">@dimen/_32sdp</item>
        <item name="android:layout_marginEnd">@dimen/_32sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

</resources>